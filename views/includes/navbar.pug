- var logo = '/images/ri_logo2.png'

#swup.transition-fade.nav.navbar.navbar-expand-md.navbar-light.bg-light.mb-3.fixed-top.shadow
  .container-fluid
    a.navbar-brand(href='/')
      img(src='/images/what_to_watch_logo_only.webp' alt='What To Watch Logo' height='36')

    button.btn.btn-dark.sidebar_collapse.d-inline-block.d-lg-none.ml-auto(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      i.fas.fa-align-justify
    #navbarSupportedContent.collapse.navbar-collapse
      .navbar-nav
        if !user_info
          a.nav-item.nav-link(href='/') Home
        a.nav-item.nav-link(href='/about') About
        a.nav-item.nav-link(href='/contact') Contact
      .navbar-nav.ml-auto
        if user_info
          a.nav-item.nav-link(href="/userprofile") Dashboard
          a.nav-item.nav-link(href="/logout") Logout
        else
          a.nav-item.nav-link(href='/login') Login
          a.nav-item.nav-link(href='/register') Register