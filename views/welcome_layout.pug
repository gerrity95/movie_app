  body

    include includes/loading_modal.pug
      
    // Page Content
    nav.navbar.navbar-expand-lg.navbar-light(style="background: #222632; box-shadow: 0px 0px 0px;margin-bottom: 0px")
      .container-fluid
        #navbarSupportedContent.collapse.navbar-collapse

          ul.nav.navbar-nav.ml-auto
            form.search_bar_alignment.my-2.my-lg-0(action='/search' method='POST')
              input.form-control.mr-sm-2(type='search' name="search" placeholder='Search' aria-label='Search' required)
              button.header_search.btn.btn-default(type='submit' style="background-color: #fff").search_button
                i.fas.fa-search

            li.nav-item.active
              a.home_click.nav-link#dash_btn(style="color: #fff" href="/userprofile") Dashboard
            li.nav-item
              a.nav-link(style="color: #fff" href="/logout") Logout

      // We'll fill this with dummy content
    block content

  
  script.
    if (getQueryVariable('failed_login')) {
      document.getElementById("bad_login").innerHTML = '*Username or password is incorrect.';
    }

    const logo_btn = document.querySelector('#logo_btn');
    const dash_button = document.querySelector('.logo_btn')
        // handle button click
        $("#logo_btn, #dash_btn, #home_btn").click(function () {
            $('#generatingReccs').modal({
              backdrop: 'static',
              keyboard: false
              })
            $("#generatingReccs").modal('show');
            $.ajax({
                type: "GET",
                url: '/user/userprofile',
                dataType: "json",
                success: function(data){
                  console.log("SUCCESS")
                  console.log(data);
                  window.location.href = "/userprofile";
                },
                error: function(jqXHR, textStatus, errorThrown){
                  console.log("FAILURE")
                  console.log(errorThrown);
                }              
            });
        });