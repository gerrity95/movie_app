extends layout

block content
  title FMovies Home
  - var reccs = movie_info
  
  .container-fluid
    .row
      for movie in reccs
        - var img_src = `https://image.tmdb.org/t/p/w500/${movie.movie_info.poster_path}`
        .col-6.col-sm-4.col-md-5.col-lg-3.col-xl-3.offset-lg-0.offset-xl-0.offset-md-1.offset-sm-0.offset-0
          .product#product-desktop
            .imgbox
              img(src=img_src)
            .specifies
              h2
                | #{movie.movie_info.title}
                br
                span Rating: #{movie.movie_info.vote_average} | 
                span  Weight: #{movie.weight}
              label Release Date
              ul
                li #{movie.movie_info.release_date}
              label Original Language
              ul.colors
                li #{movie.movie_info.original_language}
              a.btn.custom_button(href=`/movies/${movie.movie_id}`) Find Out More

          a#product-mobile(href=`/movies/${movie.movie_id}`)
            .product
              .imgbox
                img(src=img_src)
              .specifies
                h2
                  | #{movie.movie_info.title}
                  br
                  span Rating: #{movie.movie_info.vote_average} | 
                  span  Weight: #{movie.weight}
